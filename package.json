{
  "name": "electronic-pet",
  "productName": "Electronic Pet",
  "version": "0.1.0",
  "description": "A cute desktop electronic pet",
  "author": "User",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron dist/main.js",
    "dev": "tsc -w",
    "dist:win": "electron-builder --win nsis",
    "dist:win:fast": "electron-builder --win nsis --config.compression=store",
    "dist:dir": "electron-builder --dir",
    "dist:portable": "electron-builder --win portable",
    "dist:all": "electron-builder -w"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.electronicpet.app",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "compression": "normal",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "src/renderer/**/*"
    ],
    "extraFiles": [
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "guid": "53ab5480-e83c-41c8-8952-01e46d987654",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3"
  }
}
