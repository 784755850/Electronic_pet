{
  "name": "electronic-pet",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron dist/main.js",
    "dev": "tsc -w",
    "dist:win": "electron-builder --win nsis",
    "dist:portable": "electron-builder --win portable",
    "dist:all": "electron-builder -w"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.example.electronicpet",
    "publish": "never",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "src/renderer/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
